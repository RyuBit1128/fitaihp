{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build/client",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/ssr.ts",
      "use": "@vercel/node@3",
      "config": {
        "includeFiles": ["build/server/**"]
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/api/ssr.ts" }
  ]
}
