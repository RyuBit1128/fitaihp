{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    { "src": "api/ssr.ts", "use": "@vercel/node@3", "config": { "includeFiles": ["build/server/**", "build/client/**"] } },
    { "src": "build/client/**", "use": "@vercel/static@1" }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/build/client/assets/$1" },
    { "src": "/(.*)", "dest": "/api/ssr.ts" }
  ]
}


